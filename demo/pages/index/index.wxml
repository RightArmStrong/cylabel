<!--index.wxml-->
<view class="container">
  <view style='width:100%;height:30px;display:flex;flex-direction:row;align-items:center;justify-content:center;margin-top:20px;'>
    <input style='width:100%;height:100%; border:1px solid gray;margin-left:10px;margin-right:10px' bindinput='input' placeholder="可以输入label标签<label style='color:red;font-size:15px;font-weight:bold;'>aa</label>" auto-focus />
    <button style='width:20%;height:100%;margin-right:10px;font-size:16px;line-height:30px;' bindtap='bindViewTap'>确认</button>
  </view>
  <view style='width:calc(100% - 20px);height:30px;margin-top:50px;margin-left:10px;margin-right:10px;border:1px solid gray;'>
    <canvas id="animationCanvas_left" canvas-id="left" style='width:100%;height:100%' />
  </view>
  <view style='width:calc(100% - 20px);height:30px;margin-top:50px;margin-left:10px;margin-right:10px;border:1px solid gray;'>
    <canvas id="animationCanvas_center" canvas-id="center" style='width:100%;height:100%' />
  </view>
  <view style='width:calc(100% - 20px);height:30px;margin-top:50px;margin-left:10px;margin-right:10px;border:1px solid gray;'>
    <canvas id="animationCanvas_right" canvas-id="right" style='width:100%;height:100%' />
  </view>
</view>
